<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <include layout="@layout/layout_header_search"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tvsldaks"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="@color/red"
                android:textSize="18sp"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1F66AB"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/txtstt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:layout_weight="0.7"
                android:gravity="center"
                android:text="STT"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tvmstuyen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Phố"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:typeface="sans" />




            <TextView
                android:id="@+id/txtmaso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:layout_weight="0.9"
                android:gravity="center"
                android:text="Mã Hố"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:typeface="sans" />




            <TextView
                android:id="@+id/txttieuthu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Vị Trí"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tvlydo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Loại"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tvsize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="left"
                android:text="KT"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:typeface="sans" />

        </LinearLayout>


        <ListView
            android:id="@+id/lstpro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#808080"
            android:dividerHeight="1dp">

        </ListView>

    </LinearLayout>



</LinearLayout>