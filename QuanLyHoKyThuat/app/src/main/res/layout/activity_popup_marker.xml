<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B9D3EE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Mã Hố"
            android:textSize="16dp"
            />
        <EditText
            android:id="@+id/edtmaho"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tenho"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:inputType="textPersonName" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Tên Hố"/>
        <EditText
            android:id="@+id/edtTenHo"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Loại Hố"/>
        <EditText
            android:id="@+id/edtloaiho"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loaiho"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Kích Thước"/>
        <EditText
            android:id="@+id/edtktho"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:inputType="textPersonName" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Phố"/>
        <EditText
            android:id="@+id/edtpho"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Địa Chỉ"/>
        <EditText
            android:id="@+id/edtdiachi"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Ngày Kiểm Soát"/>
        <EditText
            android:id="@+id/edtngayks"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Ngày Bảo Dưỡng"/>
        <EditText
            android:id="@+id/edtngaybd"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:inputType="textPersonName" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Tọa Độ"/>
        <EditText
            android:id="@+id/edttoado"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:inputType="textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/edtghichu"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextshape"
            android:ems="10"
            android:gravity="left"
            android:layout_marginTop="2dp"
            android:enabled="false"
            android:paddingLeft="40dp"
            android:inputType = "textMultiLine" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPhoto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/picture"
            android:layout_weight="1"
            android:scaleType="fitXY"

            />
        <ImageView
            android:id="@+id/imgPhotoBd"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/picture"
            android:layout_weight="1"
            android:scaleType="fitXY"
            />

    </LinearLayout>





</LinearLayout>