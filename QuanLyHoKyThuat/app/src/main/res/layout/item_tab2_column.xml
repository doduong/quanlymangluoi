<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    holder.tvhole_route = vi.findViewById(R.id.tvstt);
    holder.tvStreet_Name = vi.findViewById(R.id.tvmakh);
    holder.tvhole_name = vi.findViewById(R.id.tvtenkh);
    holder.tvhole_address = vi.findViewById(R.id.tvdiachi);
    holder.tvInspect_Day = vi.findViewById(R.id.tvtuyen);
    holder.tvMaintain_Day

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvhole_route"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:minHeight="40dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvStreet_Name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="40dp"
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tvhole_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="40dp"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvhole_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="40dp"
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tvInspect_Day"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:minHeight="40dp"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvMaintain_Day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:minHeight="40dp"
            android:textColor="#000000"
            android:textSize="16sp" />


    </LinearLayout>



</RelativeLayout>